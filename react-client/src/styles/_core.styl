* { box-sizing: border-box }

body
    margin: 1.5em
    font-family: sans-serif

h1
    margin-top: 0
    margin-bottom: 0.5em

a
    text-decoration: none
    &:focus, &:hover
        text-decoration: underline

header
    padding-bottom: 1em
    border-bottom: 1px solid #777

nav a
    display: inline-block
    margin-right: 0.5em
    padding-right: 0.5em
    border-right: 1px solid #777

    &:last-child
        border-right: none

p
    max-width: 42em

ul
    margin: 0
    padding: 0 2em

li
    margin: 0 0 0.25em

select
    font-size: 0.9em

button
    font-size: 0.9em
    padding: 0.2em 1.5em
    border: 1px solid #777
    border-radius: 0.25em
    background: white

    &:hover, &:focus
        background: #ddd
        cursor: pointer

.negative
    color: #c41728
