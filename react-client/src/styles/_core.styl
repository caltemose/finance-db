body
    margin: 1.5em
    font-family: sans-serif

h1
    margin-top: 0
    margin-bottom: 0.5em

a
    text-decoration: none
    &:focus, &:hover
        text-decoration: underline

header
    padding-bottom: 1em
    border-bottom: 1px solid #777

nav a
    display: inline-block
    margin-right: 0.5em
    padding-right: 0.5em
    border-right: 1px solid #777

    &:last-child
        border-right: none

p
    max-width: 42em

.simple-list
    list-style: none

    & > li
        margin-bottom: 0.5em
        padding: 0

.simple-list-details
    margin: 0
    padding: 0
