* { box-sizing: border-box }

body
    margin: 1.5em
    font-family: sans-serif

h1
    margin-top: 0
    margin-bottom: 0.5em

a
    text-decoration: none
    &:focus, &:hover
        text-decoration: underline

header
    padding-bottom: 1em
    border-bottom: 1px solid #777

nav a
    display: inline-block
    margin-right: 0.5em
    padding-right: 0.5em
    border-right: 1px solid #777

    &:last-child
        border-right: none

p
    max-width: 42em

ul
    margin: 0
    padding: 0 2em

li
    margin: 0 0 0.25em

.category-list
    & li
        & h3
            display: inline-block
            margin-right: 1em
        & label
            display: inline-block
            font-size: 0.8em

button
    padding: 0.25em 1.5em
    font-size: 1em
    border: 2px solid #0f46a0
    border-radius: 0.5em

.negative
    color: #c41728
